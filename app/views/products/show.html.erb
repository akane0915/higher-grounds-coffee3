<div id="product-details-show">
  <%= render 'product' %>
</div>

<% if current_user.try(:admin?) %>
  <button><%= link_to "Edit", edit_product_path(@product), remote: true, id: "edit_product_link" %></button>
  <button><%= link_to "Delete", product_path(@product),
  :data => {:confirm => "You sure?",
    :method => "delete"} %></button>
<% end %>

<hr>

<div id="all-reviews">
  <%= render 'reviews/reviews' %>
</div>

<% if current_user %>
  <%= link_to "Add a review", new_product_review_path(@product), remote: true, id: "add-review-link" %>
<% end %>
